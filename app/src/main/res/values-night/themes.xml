<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParcelPalUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightmidgreen</item>
        <item name="colorPrimaryVariant">@color/lightmidgreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightmidgreen</item>
        <item name="colorSecondaryVariant">@color/darkmidblue</item>
        <item name="colorOnSecondary">@color/lightmidgreen</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/parcelpalbluedark</item>
        <item name="android:navigationBarColor">@color/darkmidblue</item>
        <!--        <item name="android:windowBackground">?android:attr/windowBackground</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ParcelPalUser.NoActionBar" parent="Theme.ParcelPalUser">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ParcelPalUser.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ParcelPalUser.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>